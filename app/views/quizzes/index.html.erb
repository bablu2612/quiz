<% if notice.present? %>
  <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
<% end %>
<!-- This example requires Tailwind CSS v2.0+ -->
<div class="w-full block">
  <div class="flex flex-col">
    <span class="float-left mb-2 mt-8 px-4 leading-6 font-medium text-gray-500 sm:px-6 lg:px-4">
      <h2 class="text-2xl text-left uppercase">
        <%= "#{@class_name} > #{@module_name} > #{@level_name} > "%>
      </h2>
      <span class="text-3xl text-left uppercase">
        Quizzes
      </span>
      <%= link_to 'New Quiz', new_quiz_path(level_id: params[:level_id]), class: "mb-5 w-fit shadow-xl py-3 px-5 bg-cyan-700 hover:bg-cyan-500 float-right text-white block font-medium" %>
    </span>
  <div class="overflow-x-auto w-full">
    <div class="py-2 align-middle inline-block min-w-full sm:px-6 lg:px-4">
      <div class="shadow overflow-hidden border-b border-gray-200 sm:rounded-lg">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Title
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Description
              </th>
              <!--
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Active_quiz
              </th>
              -->
              <th scope="col" class="text-center px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Action
              </th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <%= render @quizzes %> 
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
</div>

