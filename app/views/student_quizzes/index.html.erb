<% if notice.present? %>
  <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
<% end %>
<!-- This example requires Tailwind CSS v2.0+ -->
<div class="w-full block px-4">
<div class="flex flex-col">
  <h2 class="max-w-6xl mb-2 mt-8 px-4 text-3xl uppercase text-left leading-6 font-medium text-gray-500 sm:px-6 lg:px-8">
    Select Class to assign
  </h2>
  <div class="w-full">
    <div class="py-2 align-middle inline-block min-w-full sm:px-6 lg:px-2">
      <div class="shadow overflow-hidden border-b border-gray-200 sm:rounded-lg">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Class
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                
              </th>
              <th scope="col" class="float-right px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Select Students
              </th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @class_names.each do |class_name| %> 
              <tr>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                  <%= class_name.name %>
                </td> 
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                </td> 
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                </td>     
                <td class="float-right px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                  <%= link_to "Select Students", all_students_path(class_name_id: class_name.id),method: :get, class:"inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500"%>
                </td>
              </tr>  
            <% end %>    
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
</div>

