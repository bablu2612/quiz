<%= form_with model: [ClassName.find(params[:class_name_id]), @module_name] do |form| %>
  
  <% if module_name.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(module_name.errors.count, "error") %> prohibited this module_name from being saved:</h2>
      
      <ul>
        <% module_name.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :name %>
    <%= form.text_field :name, id: "name",class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>
    <%= form.hidden_field :class_name_id,value: params[:class_name_id] %>

  <div class="inline">
    <%= form.submit type: "button",class: "submit-button rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
<script>
  $(".submit-button").on('click', function() {
    if($("#name").val() =="")
    {      
      alert("Name can't be null");
    }
    else
    {
      $(".submit-button").attr("type","submit");
    }
  })
</script>