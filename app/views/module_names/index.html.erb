<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>
  <div class="w-full block">
    <div class="flex flex-col">
        <span class="float-left mb-2 mt-8 px-4 leading-6 font-medium text-gray-500 sm:px-6 lg:px-4">
          <h2 class="text-2xl text-left uppercase"><%= "#{@class_name} > "%></h2>
          <span class="text-2xl text-left uppercase">Modules</span>
          <%= link_to 'New module', new_class_name_module_name_path(params[:class_name_id]), class: "mb-5 w-fit shadow-xl py-3 px-5 bg-cyan-700 hover:bg-cyan-500 float-right text-white block font-medium" %>
        </span>
      <div class="w-full overflow-x-auto">
        <div class="py-2 align-middle inline-block min-w-full sm:px-6 lg:px-4">
          <div class="shadow overflow-hidden border-b border-gray-200 sm:rounded-lg">
            <table class="min-w-full divide-y divide-gray-200">
              <thead class="bg-gray-50">
                <tr>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    Name
                  </th>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    
                  </th>
                </tr>
              </thead>
              <tbody class="bg-white divide-y divide-gray-200">
                <%= render @module_names %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
    
