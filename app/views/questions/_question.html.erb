<div id="<%= dom_id question %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Question:</strong>
    <%= question.question %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Options:</strong>
    <%= question.options %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Answer:</strong>
    <%= question.answer %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Type of quiz:</strong>
    <%= question.type_of_quiz_id %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this question", question, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this question', edit_question_path(question), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
