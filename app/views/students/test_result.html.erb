<div class="mx-auto ml-8 mr-8 text-gray-700 px-4 py-4 bg-white mt-4 shadow-xl">
    <div class="flex justify-between items-center w-full">
        <h1 class="font-bold text-3xl uppercase text-gray-500">Result</h1>
    </div>
    <% if @result.present?  %>
    <div class="justify-between items-center w-full">
        <% @result.each do |result| %>
            <div class="w-full py-2">
                <span><%= result.first %></span>
                <% if result.second == "Correct" %>
                    <span class="text-green-400 text-sm"><%= result.second %>.</span>
                    <span class="text-green-500 font-bold"><%= result.third %></span>
                <% else %>
                    <span class="text-red-500"><%= result.second %>.</span> 
                    <span class="">Correct answer was</span>
                    <span class="text-green-500 font-bold"><%= result.third %></span> 
                <% end %>
                <% unless result.fourth.nil? || result.fourth == "" %>
                    <div class="text-gray-800 text-sm">Explanation :-</div>
                    <div class="text-gray-800"><%= result.fourth%></div>
                <% end %>

                
            </div>
        <% end%>
        <div class="score text-gray-500 uppercase text-2xl">
            You have scored <%= @score.to_s+" out of "+@result.length.to_s %>
        </div>
    </div>
    <% else  %>
    <div class="justify-between items-center w-full">
    <span class="text-green-500">Your Result Submited</span>

    </div>
    <% end  %>

</div>

